    action="{{ path('admin_orders_delete', {'id': order.id}) }}" 
    onsubmit="return confirm('Sure de vouloir supprimer la commande ?');">

    <input type="hidden" 
        name="_token" 
        value="{{ csrf_token('delete' ~ order.id) }}">
    <button class="btn">Delete</button>

</form>
