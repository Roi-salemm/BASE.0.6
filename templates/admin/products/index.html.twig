{% extends 'base.html.twig' %}


{% block title %}Administration des produits{% endblock %}


    {% block stylesheets %}
    {% endblock %}



{% block body %}
    <div class="container">
        <div class="row">
            {% include "_partials/_adminnav.html.twig" %}
            <main class="col-9 border border-light bg-white p-2">
                <div class="row">
                    <div class="col-7">
                        <h1>Les Produits</h1>
                    </div>
                    {# <div class="relatif">
                        <button class="btn__add"><a class="decoration centre" href="{{ path('admin_products_add') }}">+</a></button>
                    </div> #}
                </div>
                

                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Stock</th>
                            <th>Categorie</th>
                            <th>Actions</th>
                            <th>Disponibilit√©</th>
                        </tr>
                    </thead>
{# <pre>
    {{ dump(produits) }}
</pre> #}
                    <tbody>
                        {% for produit in produits %}
                            <tr>
                                <td>{{ produit.id }}</td>
                                <td><img width="50px" height="50px" src="{{ asset('assets/uploads/products/mini/300x300-'~ produit.images[0].name ) }}" alt="{{ produit.name }}"></td>
                                <td>{{ produit.name}}</td>
                                <td>{{ produit.price / 100}}</td>
                                <td>{{ produit.stock }}</td>
                                <td>{{ produit.categories.name }}</td>
                                <td>
                                    <a class="btn_modifier" href="{{ path('admin_products_edit', {id: produit.id}) }}">Modifier</a>
                                    <a class="btn_supprimer" href="{{ path('admin_products_delete', {id: produit.id}) }}">Supprimer</a>
                                </td>
                                <td>
                                    <input type="checkbox" 
                                    class="product" 
                                    data-id="{{ produit.id }}" 
                                    data-av="{{ produit.availability }}" 
                                    id="availabilityCheckbox" 
                                    {% if produit.availability == 1 %}checked{% endif %}>

                                    {# {% if produit.availability == 1 %}
                                        <input class="form-check-input" type="checkbox" role="switch" id="availabilityCheckbox" checked disabled>
                                    {% else %}
                                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDisabled" disabled>
                                    {% endif %} #}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>

                </table>
            </main>
        </div>
    </div>
{% endblock %}

    {% block javascripts %}
    {% endblock %}








    